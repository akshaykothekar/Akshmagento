<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Acl/etc/acl.xsd">
    <acl>
        <resources>
            <resource id="Magento_Backend::admin">
                <resource id="Akshmagento_AkshProgressiveApp::pwa" title="Aksh Progressive App" sortOrder="20">
                    <resource id="Akshmagento_AkshProgressiveApp::settings" title="Settings" sortOrder="10"/>
